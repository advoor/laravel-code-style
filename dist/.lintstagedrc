{
    "*.php": [
      "php ./vendor/bin/php-cs-fixer fix --config dist/.php_cs",
      "php artisan code:analyse",
      "./vendor/bin/phpunit",
      "./node_modules/.bin/eslint resources/js --fix",
      "git add"
    ],
    "composer.json": [
      "composer validate",
      "php ./vendor/bin/security-checker security:check",
      "git add"
    ]
}
